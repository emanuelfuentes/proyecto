<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/et_password_register_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            />

        <EditText
            android:id="@+id/et_repeat_pw_register_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/enter_your_password_again"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@+id/et_password_register_pw" />

        <Button
            android:id="@+id/btn_validar_pw_register_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/et_repeat_pw_register_pw" />


        <CheckedTextView
            android:layout_marginTop="35dp"
            android:id="@+id/etv_conditions_register_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckedTextView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accept_terms_and_conditions"
            app:layout_constraintStart_toEndOf="@+id/etv_conditions_register_pw"
            app:layout_constraintTop_toBottomOf="@+id/et_repeat_pw_register_pw" />


    </LinearLayout>

</FrameLayout>