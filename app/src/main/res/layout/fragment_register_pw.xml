<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_password_register_pw" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="160dp"
            app:layout_constraintHorizontal_bias="0.571" android:hint="@string/password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_repeat_pw_register_pw"
            app:layout_constraintTop_toBottomOf="@+id/et_password_register_pw" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="36dp" app:layout_constraintHorizontal_bias="0.571"
            android:hint="@string/enter_your_password_again"/>
    <Button
            android:text="@string/finish"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:id="@+id/btn_validar_pw_register_pw"
            app:layout_constraintTop_toBottomOf="@+id/et_repeat_pw_register_pw" android:layout_marginTop="164dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etv_conditions_register_pw" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/et_repeat_pw_register_pw"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp"/>
    <TextView
            android:text="@string/accept_terms_and_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/etv_conditions_register_pw"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_repeat_pw_register_pw" android:layout_marginTop="76dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>